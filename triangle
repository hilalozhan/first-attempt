#include<stdio.h>
#include<conio.h>

int main(){
	int i,j,k,a;
    out :
    printf("bir sayi giriniz:");
    scanf("%d",&a); 
       if(a>=1){
	      if (a<=8){
        	for (i=1;i<=a;i++){
		for(j=1;j<=a-i;j++){
			printf(" ");
		}
		for(k=1;k<=i;k++){
			printf("#");
		}
		printf("\n");
	}
	} 
	   else {
  	goto out;
  } 
   }
     else {
  	goto out;
  }
 
}
